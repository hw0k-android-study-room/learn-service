<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBind" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="144dp" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="onBindClick"/>
    <Button
            android:text="Unbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonUnbind"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonBind" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:onClick="onUnbindClick"/>
    <Button
            android:text="Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/buttonCount" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonUnbind" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:onClick="onCountClick"/>
    <Button
            android:text="Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonActivity" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonCount" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:onClick="onActivityClick" />
</android.support.constraint.ConstraintLayout>